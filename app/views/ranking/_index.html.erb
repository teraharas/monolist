<div class="container">
  <div class="container-inner inner-default clearfix">
    <% rank_number = 1 %>
    <% items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% if item.large_image.present? %>
              <%= image_tag(item.large_image , alt: item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item.title %>
          </p>
        </div>
            <h3><%= rank_number.to_s + "位" %></h3>
            <%= item.cnt.to_s + "人が" + type + "しています！" %>
        <%= render 'items/action' , item: item if logged_in? %>
      </div>
      <% rank_number += 1 %>
    <% end %>
  </div>
</div>